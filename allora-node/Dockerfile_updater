# Use an official Python runtime as the base image
FROM amd64/python:3.10-slim as project_env

# Set the working directory in the container
WORKDIR /app

# Install dependencies
COPY updater-requirements.txt updater-requirements.txt
RUN pip install --upgrade pip setuptools \
    && pip install --timeout=360 -r updater-requirements.txt \
    && pip install ccxt pandas numpy retrying requests

FROM project_env

# Copy application files
COPY update_app.py app_config.py app_utils.py /app/

# Create necessary cache directories
RUN mkdir -p /app/data/tiingo_cache /app/data/okx_cache

# Set the entrypoint command - fixed syntax issue in original
ENTRYPOINT ["sh", "-c", "while true; do python -u /app/update_app.py; sleep 60; done"]
